<h1 align="center">Welcome to MessageMe - A complete chat app</h1></br>
<h2 class="ui center aligned icon header">
  <i class="circular users icon"></i>
  Login to continue
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        <div class="ui form">
          <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder:"Enter username" %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.password_field :password,placeholder: "Enter password", autocomplete: "off" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Log in", class:"ui blue submit button"%>
        </div>
        <% end %>

      </div>
    <div class="middle aligned column">
        <%= link_to  "Sign up", signup_path, class: "ui orange big button signup" %>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
